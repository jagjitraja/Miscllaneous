<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/city_list_fragment"
        android:name="com.example.t00533766.tourguide.CityListFragment"
        class="com.example.t00533766.tourguide.CityListFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark" />


    <fragment android:name="com.example.t00533766.tourguide.DetailFragment"
        android:layout_height="wrap_content"
        android:id="@+id/details_fragment"
        android:layout_weight="3"
        android:layout_width="match_parent" />

    </LinearLayout>
